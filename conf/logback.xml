<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
		<pattern>%d{HH:mm:ss.SSS} %-5level %msg%n</pattern>
    </encoder>
  </appender>
  
  <logger name="com.surftools" level="INFO"/>
  
  <root level="WARN">
    <appender-ref ref="STDOUT" />
  </root>
  
</configuration>
